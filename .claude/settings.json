{
	"hooks": {
		"PreToolUse": [
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": ".claude/check-manual-dev-processes.sh"
					}
				]
			}
		],
		"PostToolUse": [
			{
				"matcher": "Edit|MultiEdit|Write|Bash",
				"hooks": [
					{
						"type": "command",
						"command": ".claude/check-vite-errors.sh"
					}
				]
			}
		]
	}
}