---
import BaseLayout from "./BaseLayout.astro";
const { title, socialDescription } = Astro.props;
const path = Astro.url.pathname;
---

<BaseLayout pageTitle={title} description={socialDescription}>
  {path !== "/" && <h2 class="-mt-0 p-name">{title}</h2>}

  <div class="e-content">
    <slot />
  </div>
</BaseLayout>
