---
import "@/styles/global.css";

import siteData from "@/data/siteconfig.js";
import BaseHead from "@/components/BaseHead.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

const { pageTitle, description: pageDescription } = Astro.props;

const {
  title: siteTitle,
  url,
  author: { twitterUsername },
  repository,
  RSSFeed,
  sitemap,
  contentLicence,
} = siteData;
---

<html lang="en" class="dark">
  <head>
    <BaseHead title={pageTitle} description={pageDescription} />
  </head>
  <body class="bg-white dark:bg-stone-800">
    <div
      class="container mx-auto grid h-screen max-w-4xl grid-rows-[auto_1fr_auto] px-4 pt-4"
    >
      <Header />

      <main class="prose mt-8 dark:prose-invert">
        <slot />
      </main>

      <Footer />
    </div>
  </body>
</html>
