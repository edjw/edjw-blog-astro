---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}
const { post } = Astro.props;

const formattedDate = new Intl.DateTimeFormat("en-GB", {
  day: "numeric",
  month: "long",
  year: "numeric",
}).format(new Date(post.data.pubDate));
---

<section class="flex flex-col gap-y-0.5">
  <p class="mt-0 mb-0 text-base text-[#DA291C]">
    {formattedDate}
  </p>
  <h3 class="mt-0 mb-0" transition:name={post.data.title}>
    <a
      href={`/blog/${post.id}`}
      class="text-2xl font-bold text-stone-900 no-underline! hover:underline!"
      >{post.data.title}</a
    >
  </h3>
</section>
