---
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}
const { post } = Astro.props;

const formattedDate = new Intl.DateTimeFormat("en-GB", {
  day: "numeric",
  month: "long",
  year: "numeric",
}).format(new Date(post.data.pubDate));
---

<section
  class="p-8 my-10 prose border-t-8 border-yellow-200 shadow-lg dark:prose-invert dark:bg-stone-900"
>
  <p class="m-0 text-base">
    {formattedDate}
  </p>
  <h3 class="mt-1">
    <a class="cursor-pointer" href={`/blog/${post.slug}`} rel="prefetch"
      >{post.data.title}</a
    >
  </h3>
</section>
