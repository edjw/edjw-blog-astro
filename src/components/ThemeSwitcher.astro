<p class="prose dark:prose-light">
    <button id="dark" class="hover:underline">
        Dark
    </button>
    /
    <button id="light" class="hover:underline">
        Light
    </button>
</p>
<script>

const applyLightMode = () => {
    localStorage.theme = 'light';
    document.documentElement.classList.remove('dark');
}

const applyDarkMode = () => {
    localStorage.theme = 'dark';
    document.documentElement.classList.add('dark');
}

document.querySelector("#dark").addEventListener("click", applyDarkMode);
document.querySelector("#light").addEventListener("click", applyLightMode);


</script>