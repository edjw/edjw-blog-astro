<p class="text-lg leading-loose prose dark:prose-invert">
  <button
    id="dark"
    class="no-underline px-2 dark:text-stone-700 dark:cursor-auto hover:bg-yellow-200 dark:hover:bg-transparent"
  >
    Dark</button
  >
  <span class="invisible sm:visible">/</span>
  <button
    id="light"
    class="no-underline px-2 text-gray-200 cursor-auto dark:cursor-pointer dark:hover:bg-yellow-200 dark:hover:text-stone-700 hover:bg-transparent"
  >
    Light</button
  >
</p>
<script>
  const darkModeButton = document.querySelector(
    "button#dark"
  ) as HTMLButtonElement;

  const lightModeButton = document.querySelector(
    "button#light"
  ) as HTMLButtonElement;

  darkModeButton.addEventListener("click", () => {
    document.documentElement.classList.add("dark");
    localStorage.setItem("theme", "dark");
  });

  lightModeButton.addEventListener("click", () => {
    document.documentElement.classList.remove("dark");
    localStorage.setItem("theme", "light");
  });
</script>
